@{
}
@model StudentWebPortal.Web.Models.Entities.Student

<h1>Edit Student</h1>

@if(Model is null)
{
    <p>No students are found in this id </p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <labal class="form-label">Id</labal>
            <input type="text" class="form-control" asp-for="Id" readonly/>
        </div>


        <div class="mt-3">
            <labal class="form-label">Name</labal>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <labal class="form-label">Email</labal>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <labal class="form-label">Phone</labal>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <labal class="form-label">Address</labal>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subcribed" />
            <lable class="form-check-lable" for="Subcribed">Subcribed</lable>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>

            <button type="submit" class="btn btn-danger ms-3" 
             asp-action="Delete"
            asp-controller="Students">Delete</button>
        </div>
    </form>
}