@model List<StudentWebPortal.Web.Models.Entities.Student>
<a class="btn btn-primary" asp-controller="Students" asp-action="Add">Add Student</a>
<h1>Students</h1>
<table class="table">
    <thaed>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thaed>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Address</td>
                <th>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </th>
            </tr>
            
        }
    </tbody>
    </table>
